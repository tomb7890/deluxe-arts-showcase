    </header>
    
    <nav class="site-menu">
      <ul class="menu">
        <li>Boards</li>
        <li>Jackets</li>
        <li>Shoes</li>
        <li>POWER</li>
        <li>Hover Accessories</li>
      </ul>
    </nav>

    <main>
      <%= yield %>
    </main>


    <footer>
      <nav class="footer-menu">
        <ul class="menu">
          <li>Boards</li>
          <li>Jackets</li>
          <li>Shoes</li>
          <li>POWER</li>
          <li>Hover Accessories</li>
        </ul>
      </nav>

      <div class="footer-nameplate">
        <address>
Somerville Arts Council<br />
50 Evergreen Avenue<br />
Somerville, MA 02145<br />
T 617.625.6600 ext. 2985<br />
        </address>
      </div>
    </footer>
